    "version": "0.2.0",
    "configurations": [
        {
            "name": "Local: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "src/flask-app/api/routes",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0",
                "CELERY_BROKER_URL": "redis://localhost:6379/0"
            },
            "envFile": "${workspaceFolder}/.env.fake",
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "--port=8080"
            ]
        },
        {
            "name": "Local: Celery",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "env": {
                "CELERY_BROKER_URL": "redis://localhost:6379/0"
            },
            "envFile": "${workspaceFolder}/.env.fake",
            "cwd": "${workspaceFolder}/src",
            "args": [
                "-A",
                "flask-app.worker.tasks",
                "worker",
                "-P",
                "solo",
                "--loglevel=info"
            ]
        }
    ]
}